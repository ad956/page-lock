{
  "name": "page-lock",
  "displayName": "Page lock",
  "version": "1.0.0",
  "description": "Page-Lock is a simple Chrome extension that prevents access to specific websites.",
  "author": "ad956",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.89.4",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "manifest_version": 3,
    "permissions": [
      "storage",
      "tabs",
      "webNavigation"
    ],
    "background": {
      "service_worker": "./background.ts"
    },
    "web_accessible_resources": [
      {
        "resources": [
          "password.html",
          "password.js"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ],
    "host_permissions": [
      "<all_urls>"
    ]
  }
}